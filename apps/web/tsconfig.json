{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@boardkit/core": ["../../packages/core/src"],
      "@boardkit/ui": ["../../packages/ui/src"],
      "@boardkit/platform": ["../../packages/platform/src"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/platform" }
  ]
}
